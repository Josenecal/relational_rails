
<p>Go To: <a href='/schools/'>Schools Index</a>  |  <a href='/staff_members/'>Staff Members Index</a>  |  <a href="/schools/<%= @school.id %>/staff_members/new/">Create Staff Member</a></p>
<h2><%= @school.name %> Staff Index</h2>
<table>
  <tr>
    <th>Staff ID</th>
    <th>Name</th>
    <th>School</th>
    <th>Qualified As Instructor?<th>
    <th>Role</th>
    <th>Department</th>
    <th>Courses</th>
    <th>Pay Type</th>
    <th>Pay Rate</th>
    <th>Date Added</th>
    <th>Last Updated</th>
    <th>Active Employee</th>
  </tr>
  <% @school_staff_members.each_with_index do |staff_member, index|%>
    <tr>
        <td><%= staff_member.id %></td>
        <td><%= staff_member.name %></td>
        <td><%= staff_member.school_id %></td>
        <td><%= staff_member.qualified_instructor %></td>
        <td><%= staff_member.role %></td>
        <td><%= staff_member.department %></td>
        <td><%= staff_member.courses %></td>
        <td><%= staff_member.pay_type %></td>
        <td><%= staff_member.pay_rate %></td>
        <td><%= staff_member.created_at %></td>
        <td><%= staff_member.updated_at %></td>
        <td><%= staff_member.active_employee %></td>
    </tr>
  <% end %>
</table>
